<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="wrap_content"
    a:orientation="vertical" >

    <TextView
        a:id="@+id/loading"
        a:layout_width="match_parent"
        a:layout_height="50dp"
        a:gravity="center"
        a:text="@string/loading"
        a:textStyle="italic" />

    <!-- show -->

    <RelativeLayout
        a:id="@+id/show_wrap"
        style="@style/clickbox"
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:layout_marginBottom="5dp"
        a:visibility="gone" >

        <ImageView
            a:id="@+id/show_image"
            a:layout_width="60dp"
            a:layout_height="80dp"
            a:layout_marginRight="5dp"
            a:contentDescription="@string/image_show"
            a:scaleType="centerInside" />

        <de.boomboxbeilstein.android.views.MarqueeTextView
            a:id="@+id/show_header"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:layout_marginBottom="2dp"
            a:layout_toRightOf="@id/show_image"
            a:ellipsize="marquee"
            a:singleLine="true"
            a:text="@string/current_show" >
        </de.boomboxbeilstein.android.views.MarqueeTextView>

        <de.boomboxbeilstein.android.views.MarqueeTextView
            a:id="@+id/show_title"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:layout_below="@id/show_header"
            a:layout_marginBottom="2dp"
            a:layout_toRightOf="@id/show_image"
            a:ellipsize="marquee"
            a:singleLine="true"
            a:textStyle="bold" >
        </de.boomboxbeilstein.android.views.MarqueeTextView>

        <de.boomboxbeilstein.android.views.MarqueeTextView
            a:id="@+id/show_description"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:layout_below="@id/show_title"
            a:layout_toRightOf="@id/show_image"
            a:ellipsize="marquee"
            a:singleLine="true" >
        </de.boomboxbeilstein.android.views.MarqueeTextView>

        <de.boomboxbeilstein.android.views.MarqueeTextView
            a:id="@+id/show_preview"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:layout_below="@id/show_description"
            a:layout_marginTop="5dp"
            a:layout_toRightOf="@id/show_image"
            a:ellipsize="marquee"
            a:singleLine="true"
            a:visibility="gone" >
        </de.boomboxbeilstein.android.views.MarqueeTextView>
    </RelativeLayout>

    <!-- track -->

    <LinearLayout
        a:id="@+id/current_wrap"
        style="@style/box"
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:layout_marginBottom="5dp"
        a:orientation="vertical"
        a:visibility="gone" >

        <de.boomboxbeilstein.android.views.MarqueeTextView
            a:id="@+id/current_title"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:layout_marginBottom="10dp"
            a:ellipsize="marquee"
            a:gravity="center_horizontal"
            a:singleLine="true"
            a:textStyle="bold" >
        </de.boomboxbeilstein.android.views.MarqueeTextView>

        <ImageView
            a:id="@+id/current_cover"
            a:layout_width="match_parent"
            a:layout_height="180dp"
            a:contentDescription="@string/image_cover"
            a:scaleType="centerInside" />
    </LinearLayout>

    <!-- lyrics -->

    <LinearLayout
        a:id="@+id/lyrics_wrap"
        style="@style/clickbox"
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:layout_marginBottom="5dp"
        a:orientation="vertical"
        a:visibility="gone" >

        <TextView
            a:id="@+id/lyrics"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:gravity="center_horizontal"
            a:maxHeight="80dp" >
        </TextView>

        <TextView
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:layout_marginTop="3dp"
            a:gravity="center_horizontal"
            a:text="@string/lyrics_click_here"
            a:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        a:id="@+id/link"
        style="@style/clickbox"
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:layout_marginBottom="5dp"
        a:orientation="vertical" >

        <TextView
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:gravity="center_horizontal"
            a:text="@string/homepage" />
    </LinearLayout>

</LinearLayout>